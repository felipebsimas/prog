<?php

class MinhaClasse{
    public $n;
    
    public function __construct($n){
       $i = $n;
       $calc = 1;
       while ($i > 1){
        $calc *= $i;
        $i--;
       }

    echo $calc;
    }
    

}
$calcfat = new MinhaClasse('5');

